

<section class="flex flex-col items-center w-full h-screen bg-pink-200 text-gray-700">
    {{ form_errors(form) }}

    <h1 class="p-8 font-bold text-2xl">Creer un user</h1>

    <div class="w-96 p-12 bg-white items-center rounded shadow-lg" >
    {{ form_start(form) }}
    
          <div class="form-field">
            <label class="font-semibold text-xs">Email</label>
            {{ form_widget(form.email, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">Nom</label>
            {{ form_widget(form.nom, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>
        
        <div class="form-field">
            <label class="font-semibold text-xs">Prenom</label>
            {{ form_widget(form.prenom, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">Mot de passe</label>
            {{ form_widget(form.password, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">confirmation mot de passe</label>
            <input id="confirmPassword" type="password" class="flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2"></input>
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">Telephone</label>
            {{ form_widget(form.telephone, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <button class="flex items-center justify-center h-12 px-6 w-64 bg-pink-200 mt-8 rounded font-semibold text-sm text-gray-700 hover:bg-pink-500">
            {{ button_label|default('modifier') }}
        </button>
        
        {{ form_end(form) }}
    </div>
    
    
    
</section>
