{% extends 'base.html.twig' %}
{% block title %}Profil de {{ app.user.prenom}}{% endblock %}

{% block body %}


<section class="flex flex-col items-center w-screen h-screen bg-pink-200 text-gray-700">

<h1 class="p-8 font-bold text-2xl">Utilisateur</h1>

<div class="bg-white overflow-hidden shadow rounded-lg border">
    <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
            Profil de {{ app.user.prenom}}
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
            Vous trouverez toutes les informations vous concernant.
        </p>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
        <dl class="sm:divide-y sm:divide-gray-200">

            <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">
                    Nom complet
                </dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    {{ app.user.nom }} {{ app.user.prenom }}
                </dd>
            </div>

            <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">
                    Adresse Mail
                </dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    {{ app.user.email }}
                </dd>
            </div>

            <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">
                    Téléphone
                </dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    {% if app.user.telephone %}
                    {{ app.user.telephone }}
                    {% else %}
                     Numéro non renseigné
                    {% endif %}
                </dd>
            </div>
            <div class=" flex items-center justify-center py-3">
            <a href="{{ path('app_user_edit', {'id' : app.user.id} )    }}" class="inline-block px-9 py-3 text-sm font-medium text-white bg-pink-200 border border-pink-200 rounded active:text-pink-00 hover:bg-transparent hover:text-pink-200 focus:outline-none focus:ring">
            Modifier le profil
            </a>
        </dl>
        
    </div>
</div>

</section>
{% endblock %}