{% extends 'base.html.twig' %}

{% block title %}Messagerie index{% endblock %}

{% block body %}
    <h1>Historique des messages</h1>  

    {% if messageries is not empty %}

    <table class="table">
        <thead>

            <tr> 
                <th>User</th>
                <th>Id</th>
                <th>Motif</th>
                <th>Description</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for messagerie in messageries %}
            <tr>
                <td>{{ messagerie.userMail}}</td>
                <td>{{ messagerie.id }}</td>
                <td>{{ messagerie.motif }}</td>
                <td>{{ messagerie.description }}</td>
                <td>{{ messagerie.date.format('Y-m-d H:i:s') }}</td>
                <td>
                    <a href="{{ path('app_messagerie_show', {'id': messagerie.id}) }}">show</a>
                    <a href="{{ path('app_messagerie_edit', {'id': messagerie.id}) }}">edit</a>
                </td>
            </tr>
             {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun message Ã  afficher.</p>
    {% endif %}

    <a href="{{ path('app_messagerie_new') }}">Create new</a>
{% endblock %}
