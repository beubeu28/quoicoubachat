

<section class="flex flex-col items-center w-full h-screen bg-pink-200 text-gray-700">
    {{ form_errors(form) }}



    <h1 class="p-8 font-bold text-2xl">Creer un article</h1>

    

    <div class="w-96 p-12 bg-white items-center rounded shadow-lg" >
    {{ form_start(form) }}
    
        
        <div class="form-field">
            <label class="font-semibold text-xs">Nom</label>
            {{ form_widget(form.nom, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>
        
        <div class="form-field">
            <label class="font-semibold text-xs">Prix</label>
            {{ form_widget(form.prix, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">Description</label>
            {{ form_widget(form.description, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">Stock</label>
            {{ form_widget(form.stock, { 'attr': {'class': 'flex items-center h-12 px-4 w-64 border-2 border-pink-200 border-opacity-100 bg-white mt-2 rounded focus:outline-none focus:ring-2'} }) }}
        </div>

        <div class="form-field">
            <label class="font-semibold text-xs">Image</label>
            {{ form_widget(form.imageFile)}}        
        </div>

        <button class="flex items-center justify-center h-12 px-6 w-64 bg-pink-200 mt-8 rounded font-semibold text-sm text-gray-700 hover:bg-pink-500">
            {{ button_label|default('Cr√©er') }}
        </button>
        
        {{ form_end(form) }}
    </div>
    
    
    
</section>
